<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/fondo_info"
        tools:context=".admin.SimAdminActivity"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <!-- Contenido superior que se puede desplazar -->
        <!-- Contenedor con fondo redondeado -->
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintHorizontal_bias="0.501" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/roundedContainer"
                android:layout_width="match_parent"
                android:layout_height="624dp"
                android:background="@drawable/bordersecond"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintVertical_bias="0.254">

            <TextView
                    android:id="@+id/titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:text="Dispositivooo"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteY="20dp" />

            <TextView
                    android:id="@+id/textobloqueo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="1dp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:text="Texto de SIM"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/titel" />

            <LinearLayout
                    android:id="@+id/ContainerID"
                    android:layout_width="330dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textobloqueo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/containerUnlock1"
                        android:background="@drawable/border"
                        android:backgroundTint="@color/primary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <TextView
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="Ingresar Codigo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                    android:id="@+id/Container1"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="250dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/ContainerID">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="16dp"
                            android:text="Información del equipo"
                            android:textSize="16sp"
                            android:paddingBottom="8dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:paddingStart="16dp"
                            android:text="Información del equipo"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:id="@+id/textView4" />

                    <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            app:cardBackgroundColor="@color/primary">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="16dp"
                                android:text="Licencia"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:gravity="center_vertical" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="318dp"
                            android:layout_height="57dp"
                            android:orientation="vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="210dp"
                                android:layout_height="0dp"
                                android:layout_weight="1">


                            <TextView
                                    android:id="@+id/deviceID"
                                    android:text="LOCKPLAY-XX-XX"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="21sp"
                                    android:textColor="@color/black" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/Container2"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="250dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/Container1">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            app:cardBackgroundColor="@color/primary">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="16dp"
                                android:text="Registro de pagos"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:gravity="center_vertical" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:gravity="">

                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                android:layout_width="210dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                            <TextView
                                    android:id="@+id/textContact1"
                                    android:text="0999999999"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="21sp"
                                    android:textColor="@color/black"

                                    />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="60dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/ButtonContact1">

                            <ImageView
                                    android:padding="12dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/call"
                                    android:background="@color/black"
                                    android:contentDescription="calendar"

                                    />
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/Container3"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="250dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/Container2">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            app:cardBackgroundColor="@color/primary">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="16dp"
                                android:text="Soporte Tecnico"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:gravity="center_vertical" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:gravity=""

                            >

                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                android:layout_width="210dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/textContact2"
                                    android:text="0999999999"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="21sp"
                                    android:textColor="@color/black"

                                    />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="60dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/ButtonContact2">

                            <ImageView
                                    android:padding="12dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/call"
                                    android:background="@color/black"
                                    android:contentDescription="calendar"

                                    />
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/> <!-- Empuja la imagen hacia abajo cuando hay poco contenido -->


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/roundedContainerConexion"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/black"
                android:padding="10dp"
                android:backgroundTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/dateNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:text="Fecha: 00-00-000 | Hora: 00:00:00"
                    android:textSize="15sp" />

            <!-- Contenedor de botones WiFi y Datos móviles -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/dateNow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <Button
                        android:id="@+id/btnWifiblock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WiFi"
                        android:drawableLeft="@drawable/wifi"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>